{
    "manifest_version": 3,
    "version": "1.1.1",
    "version_name": "1.1.1",
    "name": "Custom Shortcuts for Google Maps",
    "description": "Create keyboard shortcuts to make browsing Google Maps more fluid.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://google.com/maps*",
        "*://*.google.com/maps*"

    ],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://google.com/maps*",
                "*://www.google.com/maps*"
            ],
            "js": ["content_script.js"]
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}